<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.sonarsource.dotnet</groupId>
    <artifactId>sonarlint-visualstudio</artifactId>
    <version>1.0</version>
  </parent>

  <artifactId>SonarLint.VSIX</artifactId>
  <packaging>pom</packaging>
  <name>SonarLint.VSIX</name>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>1.12</version>
        <executions>
          <execution>
            <id>attach-artifacts</id>
            <phase>package</phase>
            <goals>
              <goal>attach-artifact</goal>
            </goals>
            <configuration>
              <artifacts>
                <artifact>
                  <file>${env.WORKSPACE}/binaries/SonarLint.2015.vsix</file>
                  <type>vsix</type>
                  <classifier>2015</classifier>
                </artifact>
                <artifact>
                  <file>${env.WORKSPACE}/binaries/SonarLint.2017.vsix</file>
                  <type>vsix</type>
                  <classifier>2017</classifier>
                </artifact>
                <artifact>
                  <file>${env.WORKSPACE}/binaries/SonarLint.2019.vsix</file>
                  <type>vsix</type>
                  <classifier>2019</classifier>
                </artifact>
              </artifacts>
            </configuration>
          </execution>
        </executions>
        </plugin>
    </plugins>
  </build>
</project>