<Window x:Class="SonarLint.VisualStudio.Integration.Vsix.SonarLintDaemonSplashscreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Activate support for JavaScript in SonarLint" Width="500"
        WindowStartupLocation="CenterScreen" Topmost="True" SizeToContent="Height"
        >
    <StackPanel Margin="5">
        <TextBlock Margin="0,5"
            Text="SonarLint for Visual Studio can also analyze JavaScript files. After installing JavaScript support, it will be activated for newly opened files. Note that it doesn't benefit from the connected mode for now."
            TextWrapping="Wrap"/>

        <TextBlock Margin="0,5"
            Text="Would you like to download and activate JavaScript support in SonarLint now?"
            TextWrapping="Wrap"/>

        <CheckBox Margin="10" HorizontalAlignment="Center"
                  x:Name="SkipActivateMoreDialogCheckBox"
                  Content="Don't show this message again" IsChecked="True" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Background="AliceBlue">
            <Button Margin="5" Padding="20,5" IsDefault="True" Click="ClickYes">Yes</Button>
            <Button Margin="5" Padding="20,5" IsCancel="True">No</Button>
        </StackPanel>
    </StackPanel>
</Window>